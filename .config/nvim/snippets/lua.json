{
  "function": {
    "prefix": "fn",
    "body": [
      "function ${1:name}($2)",
      "\t$3",
      "end"
    ],
    "description": "Create a function"
  },
  "local function": {
    "prefix": "lfn",
    "body": [
      "local function ${1:name}($2)",
      "\t$3",
      "end"
    ],
    "description": "Create a local function"
  },
  "require": {
    "prefix": "req",
    "body": ["local ${1:module} = require('${2:$1}')"],
    "description": "Require a module"
  },
  "local variable": {
    "prefix": "lv",
    "body": ["local ${1:name} = $2"],
    "description": "Local variable"
  },
  "for loop": {
    "prefix": "for",
    "body": [
      "for ${1:i} = ${2:1}, ${3:10} do",
      "\t$4",
      "end"
    ],
    "description": "For loop"
  },
  "for in pairs": {
    "prefix": "forp",
    "body": [
      "for ${1:key}, ${2:value} in pairs(${3:table}) do",
      "\t$4",
      "end"
    ],
    "description": "For in pairs loop"
  },
  "if statement": {
    "prefix": "if",
    "body": [
      "if ${1:condition} then",
      "\t$2",
      "end"
    ],
    "description": "If statement"
  }
}
